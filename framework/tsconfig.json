{
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "target": "es6",
        "declaration": true,
        "outDir": "./dist/lib",
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "experimentalDecorators":true,
        "strict": true,
        "sourceMap": true,
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/distPackage.ts",
        "src/fsPromises.ts",
        "src/Reflector.ts",
        "src/index.build.ts",
    ]
}